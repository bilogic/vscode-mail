{
	"name": "vsc-mail",
	"displayName": "vsc-mail",
	"description": "VS Code mail client.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.69.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vsc-mail.setupMail",
		"onView:mail"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vsc-mail.setupMail",
				"title": "setup mail",
				"icon": {
					"light": "images/light/add.svg",
					"dark": "images/dark/add.svg"
				}
			},
			{
				"command": "vsc-mail.openContent",
				"title": "open mail"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "vsc-mail.setupMail",
					"when": "view == mail",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "vsc-mail.openContent",
					"when": "view == mail && viewItem == mail",
					"group": "inline"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "vsc-mail",
					"title": "Mail",
					"icon": "images/mail.svg"
				}
			]
		},
		"views": {
			"vsc-mail": [
				{
					"id": "mail",
					"name": "MailBox"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"utest": "mocha --timeout 130000 -r ts-node/register 'tests/**/*.ts'"
	},
	"devDependencies": {
		"@types/assert": "^1.5.6",
		"@types/chai": "^4.3.1",
		"@types/glob": "^7.2.0",
		"@types/mailparser": "^3.4.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/node-imap": "^0.9.0",
		"@types/vscode": "^1.69.0",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"@vscode/test-electron": "^2.0.3",
		"assert": "^2.0.0",
		"chai": "^4.3.6",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"ts-loader": "^9.2.6",
		"ts-node": "^10.9.1",
		"typescript": "^4.5.4",
		"webpack": "^5.66.0",
		"webpack-cli": "^4.9.1"
	},
	"dependencies": {
		"bluebird": "^3.7.2",
		"mailparser": "^3.5.0",
		"node-imap": "github:buhe/node-imap",
		"util": "^0.12.4"
	}
}
